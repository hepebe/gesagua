{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="col-md-12">
            <div class="page-header margin-none">
                <h2 class="padding-none">Zonas</h2>
            </div>
            <div class="table-responsive">
                <table class="table table-stripted table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Municipio</th>
                            <th>Fecha de la Ãºltima lectura</th>
                        </tr>
                    </thead>
                    <tbody>
                       {% for zone in zones %}
                            <tr data-id="{{ zone.id }}">
                                <td>{{ zone.nombre }}</td>
                                <td>{{ zone.municipio }}</td>
                                <td>
                                    {% if zone.fultimaLectura != null %}
                                        {{ zone.fultimaLectura |date('d-m-Y') }}
                                    {% endif %}
                                </td>
                                <td class="actions">
                                    <a href="{{ path('gs_reading_readzone', {id: zone.id}) }}" class="btn btn-sm btn-info">Leer zona</a>
                                </td>
                            </tr>
                        {% endfor %} 
                    </tbody>  
                </table>
            </div>
        </div>
    </div>
{% endblock %}