{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    {% if flashMessage is not defined %}
        <div class="alert alert-success hidden" id="message" role="alert">
            <div class="container"> 
                <span id="user-message"></span>
            </div>
        </div>
    {% endif %}
    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <div class="alert alert-success" role="alert">
            <div class="container"> {{ flashMessage }}</div>
        </div>
    {% endfor %}
    <div class="container">
        <div class="col-md-12">
            <div class="page-header margin-none">
                <h2 class="padding-none">Administrar rutas</h2>
            </div>
            Zonas: 
            <select id="selectZone">
                <option name="0">Seleciona la zona...</option>
                {% for zone in zones %}
                <option name="{{ zone.id }}">{{ zone.nombre }}</option>
                {% endfor %}
            </select><br><br>
            <div id="contractDivList" class="table-responsive">
                
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts%}
    {{ parent() }}
    <script src="{{ asset('bundles/gsuser/js/searchZone.js') }}"></script>
    <script src="{{ asset('bundles/gsuser/js/orderContracts.js') }}"></script>
{% endblock %}