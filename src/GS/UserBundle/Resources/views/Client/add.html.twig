{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="main container">
        <div class="row well">
            <div class="col-md-6">
                <div class="page-header">
                    <h2><i class="fa fa-user-plus" aria-hidden="true"></i> Nuevo Cliente</h2>
                </div>
                {{ form_start(form, {'attr' : {'novalidate':'novalidate', 'role' : 'form'} }) }}
                
                <div class="form-group">
                    {{ form_label(form.nombre) }}
                    {{ form_widget(form.nombre, {'attr' : {'class' : 'form-control', 'placeholder' : 'nombre'} }) }}
                    <span class="text-danger">{{ form_errors(form.nombre) }}</span>
                </div>
            
                <div class="form-group">
                    {{ form_label(form.apellidos) }}
                    {{ form_widget(form.apellidos, {'attr' : {'class' : 'form-control', 'placeholder' : 'apellidos'} }) }}
                    <span class="text-danger">{{ form_errors(form.apellidos) }}</span>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr' : {'class' : 'form-control', 'placeholder' : 'email'} }) }}
                    <span class="text-danger">{{ form_errors(form.email) }}</span>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.telefono) }}
                    {{ form_widget(form.telefono, {'attr' : {'class' : 'form-control', 'placeholder' : 'telefono'} }) }}
                    <span class="text-danger">{{ form_errors(form.telefono) }}</span>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.empadronado) }}
                    {{ form_widget(form.empadronado, {'attr' : {'class' : 'form-control'} }) }}
                    <span class="text-danger">{{ form_errors(form.empadronado) }}</span>
                </div>
                
                <div class="form-group">
                    <b>Dirección</b>
                    {{ form_widget(form.direccion, {'attr' : {'class' : 'form-control', 'placeholder' : 'dirección'} }) }}
                    <span class="text-danger">{{ form_errors(form.direccion) }}</span>
                </div>
        
                <p>
                    {{ form_widget(form.save, {'label': 'Crear cliente', 'attr':{'class':'btn btn-success'}}) }}
                </p>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}