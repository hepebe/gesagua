{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}
	<div class="container well">
	    <div class="col-md-9">
	    <h2>{{ client.nombre }} {{ client.apellidos }}</h2>
	        <br>
	        <dl>
	            <dt>{{'Nombre'}}</dt>
	            <dd>
	                {{ client.nombre }}
	                &nbsp;
	            </dd>
	            <br>

	            <dt>{{'Apellidos'}}</dt>
	            <dd>
	                {{ client.apellidos }}
	                &nbsp;
	            </dd>
	            <br>
                
	            <dt>{{'Email'}}</dt>
	            <dd>
	                {{ client.email }}
	                &nbsp;
	            </dd>
	            <br>
                
                <dt>{{'Teléfono'}}</dt>
	            <dd>
	                {{ client.telefono }}
	                &nbsp;
	            </dd>
	            <br>
                
                <dt>{{'Empadronado'}}</dt>
	            <dd>
	                {{ client.empadronado }}
	                &nbsp;
	            </dd>
	            <br>
	            
	            <dt>{{'Dirección'}}</dt>
	            <dd>
                	 {{ client.direccion }}
	                &nbsp;
	            </dd>
	            <br>

	        </dl>
	    </div>
	    <div class="col-md-3">
	    	<h3>{{ 'Acciones'}}:</h3>
			<p>
		    	<a href="{{ path('gs_client_edit', { id: client.id }) }}" class="btn btn-primary btn-lg btn-block">
		    		<span class="glyphicon glyphicon-edit"></span>
		        	{{ 'Editar cliente' }}
				 </a>
			</p>
	    </div>
	</div>
{% endblock %}