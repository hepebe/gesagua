{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="main container">
        <div class="row well">
            <div class="col-md-6">
                <div class="page-header">
                    <h2><i class="fa fa-plus" aria-hidden="true"></i> Nueva Reclamación</h2>
                </div>
                {{ form_start(form, {'attr' : {'novalidate':'novalidate', 'role' : 'form'} }) }}
                
                <div class="hidden">
                    <div class="form-group">
                        <b>Cliente</b>
                        {{ form_widget(form.client, {'attr' : {'class' : 'form-control', 'placeholder' : 'cliente'} }) }}
                        <span class="text-danger">{{ form_errors(form.client) }}</span>
                    </div>
                </div>
                
                <b>Cliente</b>
                <div class="select-editable">
                    <select id="selectClient">
                        <option value="">Selecciona un cliente...</option>
                        {% for client in clients %}
                            <option value="{{ client.id }}"> {{ client.fullclient }} </option>
                        {% endfor %}
                    </select>
                    <input type="text" class="form-control" id="textClient" name="format" value="" placeholder="Buscar..." />
                </div><br>
                
                <div class="form-group">
                    <b>Título</b>
                    {{ form_widget(form.titulo, {'attr' : {'class' : 'form-control', 'placeholder' : 'Titulo de la Reclamación'} }) }}
                    <span class="text-danger">{{ form_errors(form.titulo) }}</span>
                </div>
                
                <div class="form-group">
                    <b>Información</b>
                    {{ form_widget(form.informacion, {'attr' : {'class' : 'form-control', 'placeholder' : 'Información'} }) }}
                    <span class="text-danger">{{ form_errors(form.informacion) }}</span>
                </div>
                
                <div class="form-group">
                    <b>Estado</b>
                    {{ form_widget(form.estado, {'attr' : {'class' : 'form-control', 'placeholder' : 'Estado'} }) }}
                    <span class="text-danger">{{ form_errors(form.estado) }}</span>
                </div>
                
                <div class="form-group">
                    <b>Resolución</b>
                    {{ form_widget(form.resolucion, {'attr' : {'class' : 'form-control', 'placeholder' : 'Resolución'} }) }}
                    <span class="text-danger">{{ form_errors(form.resolucion) }}</span>
                </div>
        
                <p>
                    {{ form_widget(form.save, {'label': 'Crear Reclamación', 'attr':{'class':'btn btn-success'}}) }}
                </p>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts%}
    {{ parent() }}
    <script src="{{ asset('bundles/gsuser/js/selectClient.js') }}"></script>
{% endblock %}