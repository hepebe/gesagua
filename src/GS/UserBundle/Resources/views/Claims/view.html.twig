{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}
	<div class="container well">
	    <div class="col-md-9">
	    <h2>{{ claims.titulo }}</h2>
	        <br>
	        <dl>
	            <dt>{{'Cliente'}}</dt>
	            <dd>
	                {{ claims.client.fullclient }}
	                &nbsp;
	            </dd>
	            <br>

	            <dt>{{'Usuario'}}</dt>
	            <dd>
	                {{ claims.user.fulluser }}
	                &nbsp;
	            </dd>
	            <br>
                
	            <dt>{{'Fecha Reclamación'}}</dt>
	            <dd>
	                {{ claims.fReclamacion |date('d-m-Y') }}
	                &nbsp;
	            </dd>
	            <br>
                
                <dt>{{'Información'}}</dt>
	            <dd>
	                {{ claims.informacion }}
	                &nbsp;
	            </dd>
	            <br>
                
                <dt>{{'Estado'}}</dt>
	            <dd>
	                {{ claims.estado }}
	                &nbsp;
	            </dd>
	            <br>
	            
	            <dt>{{'Resolución'}}</dt>
	            <dd>
                	 {{ claims.resolucion }}
	                &nbsp;
	            </dd>
	            <br>

	        </dl>
	    </div>
	    <div class="col-md-3">
	    	<h3>{{ 'Acciones'}}:</h3>
			{% if claims.estado == "Pendiente" %}
			<p>
		    	<a href="{{ path('gs_claims_edit', { id: claims.id }) }}" class="btn btn-primary btn-lg btn-block">
		    		<span class="glyphicon glyphicon-edit"></span>
		        	{{ 'Resolver Reclamación' }}
				 </a>
			</p>
			{% endif %}
		    <p>
			   {{ include('GSUserBundle:Claims:forms/form.html.twig', { form: delete_form, message: '¿Estás seguro?'}) }}
			</p>
	    </div>
	</div>
{% endblock %}