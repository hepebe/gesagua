{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}
	<div class="container well">
	    <div class="col-md-9">
	    <h2>{{ user.nombre }} {{ user.apellidos }}</h2>
	        <br>
	        <dl>
	            <dt>{{'Nombre'}}</dt>
	            <dd>
	                {{ user.nombre }}
	                &nbsp;
	            </dd>
	            <br>

	            <dt>{{'Apellidos'}}</dt>
	            <dd>
	                {{ user.apellidos }}
	                &nbsp;
	            </dd>
	            <br>

                <dt>{{'Fecha de Nacimiento'}}</dt>
	            <dd>
	                {{ user.fNacimiento|date('d-m-Y')}}
	                &nbsp;
	            </dd>
	            <br>
                
                <dt>{{'Sexo'}}</dt>
	            <dd>
	                {% if user.sexo == 'H' %}
						Hombre 
					{% elseif user.sexo == 'M' %}
						Mujer
                	{% endif %}
	                &nbsp;
	            </dd>
	            <br>
                
	            <dt>{{'Email'}}</dt>
	            <dd>
	                {{ user.email }}
	                &nbsp;
	            </dd>
	            <br>
                
                <dt>{{'Tel√©fono'}}</dt>
	            <dd>
	                {{ user.telefono }}
	                &nbsp;
	            </dd>
	            <br>
                
	            <dt>{{'Tipo'}}</dt>
	            <dd>
                	 {{ user.tipo }}
	                &nbsp;
	            </dd>
	            <br>

	        </dl>
	    </div>
	    <div class="col-md-3">
	    	<h3>{{ 'Acciones'}}:</h3>
			<p>
		    	<a href="{{ path('gs_user_edit', { id: user.id }) }}" class="btn btn-primary btn-lg btn-block">
		    		<span class="glyphicon glyphicon-edit"></span>
		        	{{ 'Editar usuario' }}
				 </a>
			</p>
	    </div>
	</div>
{% endblock %}